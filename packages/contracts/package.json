{
  "name": "contracts",
  "license": "MIT",
  "version": "0.0.0",
  "description": "FEVM Foundry template",
  "private": true,
  "scripts": {
    "----- EXTERNAL -----": "---------------------------",
    "prepare": "mud types",
    "devnode": "mud devnode",
    "test": "mud test",
    "types": "mud types",
    "dev": "mud deploy-contracts --dev --watch --openUrl http://localhost:3000?dev=true",
    "deploy": "mud deploy-contracts",
    "lint": "yarn prettier && yarn solhint",
    "----- INTERNAL -----": "---------------------------",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@latticexyz/cli": "^1.33.1",
    "@latticexyz/solecs": "^1.33.1",
    "@latticexyz/std-contracts": "^1.33.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.11.18",
    "ethers": "^5.7.2",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "rimraf": "^4.1.1",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "wait-on": "^6.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true
  },
  "dependencies": {
    "@solidstate/contracts": "^0.0.52"
  }
}
